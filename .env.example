# Anthropic API Key (required)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-key-here

# OpenRouter API Key (recommended for chat on Vercel)
# Get your key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=
# Best free router model (auto-selects from free-tier models)
OPENROUTER_MODEL=openrouter/free
# Optional comma-separated fallback models
OPENROUTER_FALLBACK_MODELS=

# Public site URL (recommended for sitemap/open graph on hosted deployments)
# Example: https://vitals-ai.vercel.app
NEXT_PUBLIC_SITE_URL=

# Terra webhook secret (optional, only if using Terra integrations)
TERRA_API_SECRET=

# Enforce strict Terra signature checks in webhook handler
# true in production integrations, false for local testing
TERRA_WEBHOOK_STRICT=false

# OpenClaw integration (optional)
# Enable redacted event forwarding from OpenHealth -> OpenClaw hooks
OPENCLAW_ENABLED=false
OPENCLAW_AUTO_DISPATCH_ON_SYNC=false

# OpenClaw hooks endpoint + token
OPENCLAW_HOOKS_BASE_URL=http://127.0.0.1:18789
OPENCLAW_HOOKS_PATH=/hooks
OPENCLAW_HOOKS_TOKEN=

# Hook mode:
# - wake: lightweight alert ping
# - agent: asks OpenClaw agent to triage event digest
OPENCLAW_HOOK_MODE=wake
OPENCLAW_HOOK_WAKE_MODE=now

# Filter and payload shaping
OPENCLAW_EVENT_SEVERITIES=warning,critical
OPENCLAW_MAX_EVENTS=12
OPENCLAW_INCLUDE_SUMMARY=false
OPENCLAW_TIMEOUT_MS=8000

# Optional agent-mode fields
OPENCLAW_HOOK_NAME=OpenHealth
OPENCLAW_AGENT_ID=
OPENCLAW_AGENT_DELIVER=false
OPENCLAW_AGENT_CHANNEL=
OPENCLAW_AGENT_TO=
